{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "types": ["@testing-library/jest-dom"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.less"],
  "typeRoots": [
    "node_modules/@types",
    "src/global.d.ts",
    "vite.config.ts",
    "vite/client",
    "jest-setup.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules", "dist", "build", "server"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
